import 'package:flutter/material.dart';
import '../features/project/presentation/screens/project_screen.dart';


class AppRoutes {
  // Define route names as constants
  static const String project = '/project';
  static const String another = '/another';
  static const String dynamic = '/dynamic';

  // Centralized route generator
  static Route<dynamic>? generateRoute(RouteSettings settings) {
    switch (settings.name) {
      case project:
        return MaterialPageRoute(builder: (context) => ProjectScreen());
      case another:
        return MaterialPageRoute(builder: (context) => const AnotherScreen());
      case dynamic:
      // Handle dynamic route with arguments
        final argument = settings.arguments as String;
        return MaterialPageRoute(
          builder: (context) => DynamicScreen(argument: argument),
        );
      default:
      // Fallback for undefined routes
        return MaterialPageRoute(
          builder: (context) => const Scaffold(
            body: Center(child: Text('Page not found')),
          ),
        );
    }
  }
}
